    </aside>
  </div>
  
<!-- Main Content Area -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Header (Desktop) -->
    <header class="hidden lg:flex h-16 bg-dark-800 border-b border-dark-700 items-center justify-between px-6 flex-shrink-0">
      <h1 class="text-lg font-semibold text-white">Congregants Management</h1>
      <div class="flex items-center space-x-2">
        <Layouts.theme_toggle />
        <button class="p-2 rounded-full text-gray-400 hover:text-white hover:bg-dark-700 transition-colors">
          <.icon name="hero-bell" class="h-5 w-5" />
        </button>
      </div>
    </header>
    
<!-- Mobile header spacer -->
    <div class="lg:hidden h-16"></div>
    
<!-- Main content with scroll -->
    <main class="flex-1 overflow-y-auto p-6">
      <div class="mx-auto max-w-7xl">
        <.flash_group flash={@flash} />
        {@inner_content}
      </div>
    </main>
  </div>
</div>
