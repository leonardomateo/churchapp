<div class="flex h-screen bg-dark-900 overflow-hidden">
  <!-- Sidebar for Desktop -->
  <aside class="hidden lg:flex flex-shrink-0">
    <div class="flex flex-col w-64 bg-dark-800 border-r border-dark-700">
      <!-- Sidebar Header -->
      <div class="h-16 flex items-center px-6 border-b border-dark-700 flex-shrink-0">
        <.icon name="hero-cube" class="text-primary-500 mr-3 w-6 h-6 flex-shrink-0" />
        <span class="text-xl font-bold text-white">PACHMS</span>
      </div>
      
<!-- Navigation -->
      <nav class="flex-1 overflow-y-auto py-4 px-3 space-y-1">
        <.link
          navigate={~p"/dashboard"}
          class={[
            "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
            if((@current_path || "") == "/dashboard",
              do: "bg-primary-500/10 text-primary-500",
              else: "text-gray-400 hover:bg-dark-700 hover:text-white"
            )
          ]}
        >
          <.icon name="hero-chart-bar" class="mr-3 h-5 w-5 flex-shrink-0" /> Dashboard
        </.link>

        <.link
          navigate={~p"/congregants"}
          class={[
            "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
            if(String.starts_with?(@current_path || "", "/congregants"),
              do: "bg-primary-500/10 text-primary-500",
              else: "text-gray-400 hover:bg-dark-700 hover:text-white"
            )
          ]}
        >
          <.icon name="hero-users" class="mr-3 h-5 w-5 flex-shrink-0" /> Members
        </.link>

        <.link
          navigate={~p"/contributions"}
          class={[
            "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
            if(String.starts_with?(@current_path || "", "/contributions"),
              do: "bg-primary-500/10 text-primary-500",
              else: "text-gray-400 hover:bg-dark-700 hover:text-white"
            )
          ]}
        >
          <.icon name="hero-banknotes" class="mr-3 h-5 w-5 flex-shrink-0" /> Contributions
        </.link>

        <.link
          navigate={~p"/ministry-funds"}
          class={[
            "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
            if(String.starts_with?(@current_path || "", "/ministry-funds"),
              do: "bg-primary-500/10 text-primary-500",
              else: "text-gray-400 hover:bg-dark-700 hover:text-white"
            )
          ]}
        >
          <.icon name="hero-currency-dollar" class="mr-3 h-5 w-5 flex-shrink-0" /> Ministry Funds
        </.link>

        <.link
          navigate={~p"/events"}
          class={[
            "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
            if((@current_path || "") == "/events",
              do: "bg-primary-500/10 text-primary-500",
              else: "text-gray-400 hover:bg-dark-700 hover:text-white"
            )
          ]}
        >
          <.icon name="hero-calendar-days" class="mr-3 h-5 w-5 flex-shrink-0" /> Calendar
        </.link>

        <%!-- Admin Section - Only visible to admins and super_admins --%>
        <%= if @current_user && @current_user.role in [:super_admin, :admin] do %>
          <div class="pt-4 mt-4 border-t border-dark-700">
            <p class="px-3 mb-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
              Administration
            </p>
            <.link
              navigate={~p"/admin/users"}
              class={[
                "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
                if(String.starts_with?(@current_path || "", "/admin/users"),
                  do: "bg-primary-500/10 text-primary-500",
                  else: "text-gray-400 hover:bg-dark-700 hover:text-white"
                )
              ]}
            >
              <.icon name="hero-user-circle" class="mr-3 h-5 w-5 flex-shrink-0" /> User Management
            </.link>
            <.link
              navigate={~p"/admin/week-ending-reports"}
              class={[
                "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
                if(String.starts_with?(@current_path || "", "/admin/week-ending-reports"),
                  do: "bg-primary-500/10 text-primary-500",
                  else: "text-gray-400 hover:bg-dark-700 hover:text-white"
                )
              ]}
            >
              <.icon name="hero-document-chart-bar" class="mr-3 h-5 w-5 flex-shrink-0" />
              Weekly Reports
            </.link>
            <.link
              navigate={~p"/admin/events"}
              class={[
                "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
                if(String.starts_with?(@current_path || "", "/admin/events"),
                  do: "bg-primary-500/10 text-primary-500",
                  else: "text-gray-400 hover:bg-dark-700 hover:text-white"
                )
              ]}
            >
              <.icon name="hero-calendar" class="mr-3 h-5 w-5 flex-shrink-0" />
              Events/Activities
            </.link>
            <.link
              navigate={~p"/admin/reports"}
              class={[
                "flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors",
                if(String.starts_with?(@current_path || "", "/admin/reports"),
                  do: "bg-primary-500/10 text-primary-500",
                  else: "text-gray-400 hover:bg-dark-700 hover:text-white"
                )
              ]}
            >
              <.icon name="hero-chart-bar-square" class="mr-3 h-5 w-5 flex-shrink-0" />
              Reports
            </.link>
          </div>
        <% end %>
      </nav>
      
<!-- User Profile / Footer -->
      <div class="p-4 border-t border-dark-700 flex-shrink-0">
        <div class="flex items-center justify-between">
          <div class="flex items-center min-w-0 flex-1">
            <img
              class="h-9 w-9 rounded-full object-cover border-2 border-dark-700 flex-shrink-0"
              src="https://i.pravatar.cc/150?img=3"
              alt={if @current_user, do: @current_user.email, else: "User Profile"}
            />
            <div class="ml-3 min-w-0 flex-1">
              <p class="text-sm font-medium text-white truncate">
                {if @current_user,
                  do: to_string(@current_user.email) |> String.split("@") |> List.first(),
                  else: "User"}
              </p>
              <%= if @current_user do %>
                <.role_badge role={@current_user.role} class="mt-1" />
              <% end %>
            </div>
          </div>
          <a
            href={~p"/sign-out"}
            data-method="delete"
            class="p-2 rounded-md text-gray-400 hover:text-white hover:bg-dark-700 transition-colors flex-shrink-0"
            title="Sign out"
          >
            <.icon name="hero-arrow-right-on-rectangle" class="h-5 w-5" />
          </a>
        </div>
      </div>
    </div>
  </aside>
  
<!-- Mobile menu button -->
  <div class="lg:hidden fixed top-0 left-0 right-0 z-50 bg-dark-800 border-b border-dark-700">
    <div class="flex items-center justify-between h-16 px-4">
      <button
        type="button"
        id="mobile-menu-button"
        phx-hook="MobileMenu"
        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-dark-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
      >
        <span class="sr-only">Open main menu</span>
        <.icon name="hero-bars-3" class="h-6 w-6" />
      </button>
      <span class="text-xl font-bold text-white">PACHMS</span>
      <div class="w-10"></div>
    </div>
  </div>
  
<!-- Mobile menu overlay -->
  <div id="mobile-menu-overlay" class="lg:hidden fixed inset-0 z-40 hidden">
    <div class="fixed inset-0 bg-black bg-opacity-50" id="mobile-menu-backdrop"></div>
    <aside
      class="fixed inset-y-0 left-0 w-64 bg-dark-800 border-r border-dark-700 z-50 transform -translate-x-full transition-transform duration-300 ease-in-out"
